<view class="container">
  <image class="head-image" src="{{postData.headImgSrc}}"></image>
  <image wx:if="{{!isPlaying}}" class="audio" bindtap="onMusicStart" src="/images/music/music-start.png"></image>
  <image wx:else class="audio" bindtap="onMusicStop" src="/images/music/music-stop.png"></image>
  <!-- <image class="audio" bindtap="onMusic" src="{{isPlaying ? '/images/music/music-stop.png':'/images/music/music-start.png'}}"></image> -->
  <view class="author-date">
    <image class="avatar" src="{{postData.avatar}}"></image>
    <text class="author">{{postData.author}}</text>
    <text class="const-text">发表于</text>
    <text class="date">{{postData.dateTime}}</text>
  </view>
  <text class="title">{{postData.title}}</text>
  <view class="tool">
    <view class="circle">
      <image wx:if="{{collected}}" src="/images/icon/collection.png" bind:tap="onCollect"></image>
      <image wx:else src="/images/icon/collection-anti.png" bind:tap="onCollect"></image>
      <image class="share-img" src="/images/icon/share.png" bind:tap="onShare"></image>
    </view>
    <view class="horizon"></view>
  </view>
  <text class="detail">{{postData.detail}}</text>
</view>
